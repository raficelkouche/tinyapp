<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) { %>
      <form class="form-inline my-2 my-lg-0" action="/logout" method="POST">
        <span class="navbar-text" style="color:whitesmoke; font-size: 18px; text-decoration: underline;">Logged in as: <%= user["email"] %></span>
        <button onclick="alert('Succesfully Logged out!')" class="btn btn-warning" style="margin-left:10px;" type="submit">Logout</button>
      </form>
    <% } else { %>
      <div class="navbar-item">
        <a class="nav-item nav-link" href="/register" style="color:rgb(238, 196, 141);">Register</a>
      </div>
      <div class="navbar-item">
        <a class="btn btn-outline-light" href="/login" role="button">Login</a>
      </div>
    <% } %>
  </nav>
</header>
